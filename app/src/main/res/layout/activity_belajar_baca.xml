<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg2"
    android:id="@+id/lysantunush"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/scr_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/lykontrol"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20px">

        <ImageView
            android:id="@+id/imvwsan"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_height="wrap_content"></ImageView>

        <ImageButton
            android:background="@drawable/huruf_a"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/imbtsan"
            android:layout_height="@dimen/_150sdp"
            android:layout_width="@dimen/_150sdp"></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lykontrol"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_bg1"
        android:gravity="fill_horizontal|center"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <ImageButton
            android:id="@+id/bt1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/btnrandom"
            android:background="@drawable/button_gradient_bg" />

        <ImageButton
            android:id="@+id/bt2"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/kiri2"
            android:background="@drawable/button_gradient_bg"/>

        <ImageButton
            android:id="@+id/bt3"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/kanan2"
            android:background="@drawable/button_gradient_bg"/>


    </LinearLayout>

</RelativeLayout>
